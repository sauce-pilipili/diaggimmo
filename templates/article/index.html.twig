{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    {{ include('include/adminNavigation.html.twig') }}
    <div class="intro">
        <h4>Espace d'administration</h4>
        <p>Liste des articles</p>
    </div>

    <div class="container1">

        <table class="table" id="table">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>CreatedDate</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                        <td><a href="{{ path('article_edit',{id:article.id}) }}">{{ article.title }} </a></td>
                    <td><a href="{{ path('article_edit',{id:article.id}) }}">{{ article.description }}</a></td>
                    <td><a href="{{ path('article_edit',{id:article.id}) }}">{{ article.createdDate ? article.createdDate|date('d-m-Y') : '' }}</a></td>
                        <td>
                            {{ include('article/_delete_form.html.twig') }}
                        </td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div> <br><br><br>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.tiny.cloud/1/s00r6l2c5ltbza3mmesoaujzjfgib23jv1u79bhqquwawfgb/tinymce/5/tinymce.min.js"
            referrerpolicy="origin"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>


{% endblock %}
{% block stylesheets %}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/admin-style.css') }}">


{% endblock %}
